<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/bottom"
        android:background="@color/title_background_color"
        tools:layout_marginBottom="40dp">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/title_margin_side_size"
            android:paddingRight="@dimen/title_margin_side_size" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_icon" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/title_margin_side_size"
            android:paddingRight="@dimen/title_margin_side_size"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            />
    </RelativeLayout>
    <com.cpx.sspicture.CropImageView
        android:id="@+id/clip_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:civHeight="1"
        app:civMaskColor="#B2000000"
        app:civWidth="1" />

</LinearLayout>
