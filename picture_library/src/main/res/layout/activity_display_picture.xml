<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">


    <com.cpx.sspicture.HackyViewPager
        android:id="@+id/vp_display_picture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/ll_display_pic_title_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:paddingLeft="@dimen/title_margin_side_size"
        android:paddingRight="@dimen/title_margin_side_size">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_icon"/>

    </LinearLayout>


</FrameLayout>
